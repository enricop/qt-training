% -------------------------------------------------- footer
\setbeamertemplate{footline} {
    \usebeamerfont{page number in head/foot}

        % digia logo
        \begin{textblock*}{\paperwidth}(6pt, 252pt)
            \includegraphics[scale=0.2, keepaspectratio]{\leftSideLogo}
        \end{textblock*}
        % subsection
        % ...removed...
        % page
        \begin{textblock*}{\paperwidth}(0pt, 242pt)
            \hspace{\stretch{1}}
            {
                \color{nokiadarkgray}
                \ifthenelse{\equal{\thepage}{1}}{}{\tiny\insertframenumber/\inserttotalframenumber}
            }
            \hspace{1ex}
        \end{textblock*}
        % section
        \begin{textblock*}{\paperwidth}(0pt, 258pt)
            \hspace{\stretch{1}}
            {
              \ifthenelse{\equal{\thepage}{1}}{}{
              \setfont{8}\color{white}{\insertsectionhead}
            }}
            \hspace{\stretch{1}}
        \end{textblock*}
        % copyright
        \begin{textblock*}{\paperwidth}(0pt, 268pt)
            \hspace{\stretch{1}}
            {
              \ifthenelse{\equal{\thepage}{1}}{}{
              \setfont{4}\color{white}{\copyright \the\year\ Digia}
            }}
            \hspace{\stretch{1}}
        \end{textblock*}
        % partner logo
        \begin{textblock*}{\paperwidth}(338pt, 255pt)
            \includegraphics[scale=0.2, keepaspectratio]{\rightSideLogo}
        \end{textblock*}
  
}

